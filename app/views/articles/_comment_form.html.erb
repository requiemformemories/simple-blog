<fieldset class="form-group">
<%= f.label :name, 'Name*' %>
<%= f.text_field :name, :class => 'form-control'%>
</fieldset>

<fieldset class="form-group">
<%= f.label :email, 'Email' %>
<%= f.email_field :email, :class => 'form-control' %>

<%= f.label :text, 'Message*' %>
<%= f.text_area :text, :class => 'form-control' %>
</fieldset>

<%= f.submit 'Create', :class => 'submit btn'%>